@page
@model BlazorApp1.Areas.Identity.Pages.Account.Manage.Admin.UserEditModel
@attribute [Authorize(Roles = "admin")]
@{
    ViewBag.Title = "Редактирование пользователя";
    ViewData["ActivePage"] = ManageNavPages.AdminUsers;
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Input.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email" class="control-label">Email</label>
        <input type="text" asp-for="Input.Email" class="form-control" />
    </div>
    <div class="form-group">
        @foreach (IdentityRole role in Model.Input.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.Input.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>
